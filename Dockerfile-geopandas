# Start from a Python 3.7 or later image
FROM python:3.7-slim

# Install dependencies required for geopandas
RUN apt-get update && apt-get install -y \
    build-essential \
    libgdal-dev \
    gdal-bin \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Install geopandas and required packages
RUN pip install --no-cache-dir geopandas fiona shapely pyproj rtree

# Set the working directory
WORKDIR /app
